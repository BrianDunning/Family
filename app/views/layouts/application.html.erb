<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/1999/xhtml" >
<html>
	<head>
		<title><%= @page_title || "Family Tree" %> </title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>

		<% if flash[:notice] %>
			<div id="notice"> 
				<%= flash[:notice] %>
			</div>
		<% end %>

		<%=raw "<h1>#{@page_title}</h1>" if @page_title %>

	<%= yield %>

	</body>
</html>
